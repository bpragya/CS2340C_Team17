<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameLayout"
    tools:context=".View.InitialGameScreen">

    <View
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Player Name:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playerHealthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="PLAYER HEALTH"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/playerSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sprite_1" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/gameView"
        android:layout_marginStart="250dp"
        android:layout_marginTop="40dp"
        android:text="Score: 100"
        android:textSize="16sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/enemySprite1"
        android:layout_width="56dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/thumbnail_wizard" />

    <ImageView
        android:id="@+id/enemySprite2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:srcCompat="@drawable/thumbnail_slime" />

</RelativeLayout>